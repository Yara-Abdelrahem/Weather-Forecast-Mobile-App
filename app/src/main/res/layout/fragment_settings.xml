<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212">

    <!-- Temperature Units Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/TemperatureUnits"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#3A3A3A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <RadioGroup
                    android:id="@+id/temperature_unit_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <RadioButton
                        android:id="@+id/radio_kelvin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:buttonTint="@color/white"
                        android:text="Kelvin"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/radio_celsius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:buttonTint="@color/white"
                        android:text="Celsius"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/radio_fahrenheit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="Fahrenheit"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp" />
                </RadioGroup>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/WindSpeedUnits"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#3A3A3A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <RadioGroup
                    android:id="@+id/wind_speed_unit_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <RadioButton
                        android:id="@+id/radio_meter_sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:buttonTint="@color/white"
                        android:text="meter/sec"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/radio_miles_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="miles/hour"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp" />
                </RadioGroup>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/LocationMethod"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#3A3A3A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <RadioGroup
                    android:id="@+id/location_method_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <RadioButton
                        android:id="@+id/radio_gps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:buttonTint="@color/white"
                        android:text="GPS"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/radio_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="Map"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp" />
                </RadioGroup>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/LanguageMethod"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#3A3A3A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <RadioGroup
                    android:id="@+id/languageGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <RadioButton
                        android:id="@+id/radioEnglish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:buttonTint="@color/white"
                        android:text="English"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/radioArabic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="Arabic"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp" />
                </RadioGroup>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Wind Speed Units Section -->

    <!-- Location Method Section -->

    <!-- Language Method Section -->

</LinearLayout>